@model BASE_COBRANZAS_V2.Models.Beans.Tipo_impulso

@{
    ViewData["Title"] = "Tipo de Impulso";
    Layout = "~/Views/Shared/_layoutMstr.cshtml";
}


<h1 class="font-weight-bold text-center">Editar</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display:none">
                <label asp-for="ID_TIPO_IMPULSO" class="control-label"></label>
                <input asp-for="ID_TIPO_IMPULSO" class="form-control" />
                <span asp-validation-for="ID_TIPO_IMPULSO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ACCION" class="control-label"></label>
                <input asp-for="ACCION" class="form-control" />
                <span asp-validation-for="ACCION" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="listar_tipo_impulso" class="btn btn-toolbar">Cancelar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
